/* Survey start and complete form */

function osi_survey(&$form_state) {
  global $user;
  $uid = $user->uid;
  $rids = osi_rid(NULL, $uid);
  $survey = db_fetch_object(db_query('SELECT * FROM {osi_take} WHERE uid = %d AND tid = 0 ORDER BY rid DESC', $uid));
  if (empty($survey->rid)) {
    $survey->uid = $uid;
    $survey->tid = -1;
    $survey->rid = 0;
  }
  $form = array();
  $form['rid'] = array('#type' => 'hidden', '#value' => $survey->rid);
  $form['uid'] = array('#type' => 'hidden', '#value' => $uid);
//  $form['survey'] = array('#type' => 'markup', '#value' => '<pre>'.print_r($survey, TRUE).'</pre>');
  $form['start'] = array('#type' => 'submit', '#value' => 'Start', '#weight' => 100);
  $form['finish'] = array('#type' => 'submit', '#value' => 'Done', '#weight' => 100);
  $message = $note = '';
  if ($survey->created > 0) {
    unset($form['start']);
    if (!osi_user_is_complete()) {
      // todo - put status information here instead?
      // return;
      unset($form['finish']);
      $note = '<div class="messages status">In progress</div>';
    }
    else {
      if(empty($survey->status)) {
        $note = '<div class="messages status">Congratulations, you have completed all the questions for the assessment. Click "Finish" below to complete the assessment and lock your answers.</div>';
      }
      else {
        unset($form['finish']);
        $note = '<div class="messages status">Thank you for completing the assessment. You can now visit your <a href="/user">My Account</a> page and review the "Module reports"</div>';
      }
    }
  }
  else {
    $note = '<div class="messages status">Welcome. Please click "Start" below to start your assessment.</div>';
    unset($form['finish']);
  }
  if ($message) {
    drupal_set_message($message);
  }
  if ($note) {
    $form['note'] = array('#type' => 'markup', '#value' => $note);
  }
  return $form;
}

function osi_survey_submit($form, &$form_state) {
  $values = $form_state['values'];
// print_r($values); die();
  if ($values['start'] && empty($values['rid'])) {
   // get started!
   $take = new StdClass();
   $take->uid = $values['uid'];
   $take->tid = 0;
   $take->created = time();
   drupal_write_record('osi_take',$take);
