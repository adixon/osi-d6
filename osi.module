    $answers = _osi_get_answers(TRUE);
    $answers[0] = t('Unanswered');
  }
  $title = $indct.'. '.str_replace(array('[no-glossary]','[/no-glossary]'),'',($indicator->indicator ? $indicator->indicator : $indicator->title));
