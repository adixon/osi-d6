/* get the top level categories */

function _osi_categories($lang = NULL, $ctid = 0) {
  if (empty($lang)) {
    $lang = 'en';
  }
  $standard_vid = variable_get('osi_standard_vid',0);
  $cats = taxonomy_get_tree($standard_vid);
  $return = array(); 
  foreach ($cats as $cat) { // a tree of categories and subcategories
    $cat_lang = $cat->language ? $cat->language : 'en';
    if ($cat_lang == $lang && empty($cat->depth)) {
      //$nids = nat_get_nids(array($cat->tid)); 
      //$nid = key($nids);
      if ($ctid == $cat->tid) {
        return array($ctid => $cat->name);
      }
      $return[$cat->tid] = $cat->name;
    }
  }
  return $return;
}

/**
 * Implementation of hook_help().
 */
function osi_help($path ='', $args = array()) {
  $tid = array_pop($args);
  if (is_numeric($tid) && (2 == count($args))) {
    $type = implode('/', $args);
    switch ($type) {
      case 'osi/take':
      case 'osi/report':
        $term = taxonomy_get_term($tid);
        $output = $term->description;
        if (user_access('administer taxonomy')) { 
          $output .= '<div>['. l('edit description', 'admin/content/taxonomy/edit/term/'. $tid, array('query' => 'destination='. $path)) .']</div>';
        }
        return $output;
    }
  }
}


