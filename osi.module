/**
 * function _osi_category_report
 *
 * Internal function to generate the text of a category report
 * No argument filtering or testing.
 */
function _osi_category_report($uid, $ctid, $rid) {
  $result = db_fetch_object(db_query("SELECT * FROM {osi_take} WHERE rid = %d", $rid));
  $content = '<p>'.t('This assessment completed between %start and %end', array('%start' => format_date($result->created), '%end' => format_date($result->changed))).'</p>'; 
  $answers = _osi_get_answers(TRUE); // get the answer labels
  $results = db_query("SELECT count(nid) as counted,result FROM {osi_rid} WHERE rid = %d GROUP BY result", $rid);
  $row = array_fill_keys(array_keys($answers),'0');
  while ($total = db_fetch_array($results)) {
    $row[$total['result']] = $total['counted'];
  }
  $content .= '<h4>'.t('Your Results').'</h4>'.theme('table',array_values($answers),array(array_values($row)), array('class' => 'osi-category-report'));
  $results = db_query("SELECT nid,result FROM {osi_rid} WHERE rid = %d AND result in (1,2)", $rid);
  $nodes = array();
  while ($result = db_fetch_array($results)) {
    $node = node_load($result['nid']);
    $node->result = $result['result'];
    $nodes[] = $node;
  }
  $content .= '<h4>'.t('Areas for Improvement or Continued Work').'</h4>'.theme('osi_improvements',$nodes);
  $results = db_query("SELECT nid,result FROM {osi_rid} WHERE rid = %d AND result in (4)", $rid);
  $nodes = array();
  while ($result = db_fetch_array($results)) {
    $node = node_load($result['nid']);
    $nodes[] = $node;
  }
  $content .= '<h4>'.t('Areas of Innovation').'</h4>'.theme('osi_innovations',$nodes);
  // $content .= '<h4>'.t('Your Comments').'</h4>'.views_embed_view('osi_comments','default',$uid,$ctid);
  return $content;
}


/**
 * function osi_category_report($account, $filter_tid, $rids)
 *
 * Retrieve a table report for a "take"
 * Either a table report for the user's current assessment, or a comparison table of multiple assessments
 * Possibly filtered by category/subcategory using the filter_tid
 *
 */

function osi_category_report($account = NULL, $filter_tid = 0, $rid_list = '', $page = TRUE) {
  global $user;
  $uid = $account->uid ? $account->uid : $user->uid;
  if (!user_access('administer users') && ($user->uid != $uid)) {
    drupal_access_denied();
    exit;
  }

  $filter_tid = (integer) $filter_tid;
  if ($page) {
    drupal_set_title($filter_tid ? t('Category Report') : t('Category Reports'));
  }
  $output = ''; //<dl class="osi-user osi-uncollapsed">';
  if ($filter_tid) { 
    // if it's subcategory, get the category
    $category_tid = $filter_tid;
    $parents = taxonomy_get_parents($filter_tid);
    if (count($parents)) {
      $category_tid = reset($parents);
    }
    /* rids are the unique assessment ids - defaults to the user's current assessment */
    if ($rid_list) { // convert to the format I need, an array of rid => tid
      $rids = _osi_rid_list($rid_list,$uid);
    }
    else {  // this just generates a singleton array of rid => category_tid for the last assement of this category
      $rids = array_flip(osi_rid($category_tid,$uid));
    }
  }
  else { // no rid_lists allowed, just get the most recent assessment for each category
    $output = '<p><strong>Note:</strong> You can also return to your "My Account" page and select an individual module to see its report</p>';
    $rid_list = '';
    $rids = array_flip(osi_rid(NULL,$uid));
  }
  foreach($rids as $rid => $category_tid) {
    $cat = taxonomy_get_term($category_tid);
    $output .= '<h2>'. theme('osi_category_name',$cat) .'</h2>';
    $output .= _osi_category_report($uid, $category_tid, $rid);
  }
  return $output;
} 

