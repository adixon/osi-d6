/**
 * Implementation of hook_access().
 */
function osi_access($op, $node, $account) {


  if ($op == 'create') {
    return user_access('create osi question', $account);
  }

  if ($op == 'update' || $op == 'delete') {
    if (user_access('edit own osi question', $account) && ($account->uid == $node->uid)) {
      return TRUE;
    }
  }
}

